{
    "name": "kraftner/kraftner-wp-updates",
    "description": "Configures WordPress Auto Updates to work even with `DISALLOW_FILE_MODS` set to `true`. Also disables Auto Core Updates for Major versions.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "homepage": "https://github.com/kraftner/kraftner-wp-updates",
    "authors": [
        {
            "name": "Thomas KrÃ¤ftner",
            "email": "thomas@kraftner.com",
            "homepage": "https://kraftner.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/kraftner/kraftner-wp-updates/issues",
        "source": "https://github.com/kraftner/kraftner-wp-updates"
    },
    "require" : {
        "php": ">=7.3",
        "composer/installers": "^1.12 || ^2"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "archive": {
        "exclude": [
            "/bin",
            "/data",
            "/docker",
            "/.*",
            "/CHANGELOG.md",
            "/cli",
            "/GLOSSARY.md",
            "/README.md",
            "/SOLUM.md"
        ]
    }
}
